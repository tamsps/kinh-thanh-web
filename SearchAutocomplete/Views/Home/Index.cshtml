@model IEnumerable<Section>
@{
    ViewData["Title"] = "Search KinhThanh";
}

<div class="row">
    <div class="col-12">
        <h1 class="display-4">Search KinhThanh</h1>
        <p class="lead">Search through KinhThanh records with real-time autocomplete suggestions.</p>
    </div>
</div>

<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-body">
                <!-- Search Form -->
                <form id="searchForm">
                    <div class="row mb-3">
                        <div class="col-md-8">
                            <label for="searchInput" class="form-label">Search Term</label>
                            <div class="position-relative">
                                <input type="text" class="form-control" id="searchInput" placeholder="Type at least 2 characters to see suggestions..." autocomplete="off">
                                <div id="autocompleteDropdown" class="autocomplete-dropdown"></div>
                                <div id="loadingIndicator" class="loading-indicator d-none">
                                    <div class="spinner-border spinner-border-sm" role="status">
                                        <span class="visually-hidden">Loading...</span>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-4 d-flex align-items-end">
                            <button type="submit" id="searchButton" class="btn btn-primary w-100">
                                <span id="searchButtonText">Search</span>
                                <span id="searchButtonSpinner" class="spinner-border spinner-border-sm d-none" role="status">
                                    <span class="visually-hidden">Loading...</span>
                                </span>
                            </button>
                        </div>
                    </div>

                    <!-- Filters Section -->
                    <div class="row">
                        <div class="col-12">
                            <div class="card">
                                <div class="card-header">
                                    <button class="btn btn-link p-0 text-decoration-none" type="button" data-bs-toggle="collapse" data-bs-target="#filtersCollapse" aria-expanded="false" aria-controls="filtersCollapse">
                                        <i class="bi bi-funnel"></i> Filters
                                        <i class="bi bi-chevron-down"></i>
                                    </button>
                                </div>
                                <div class="collapse" id="filtersCollapse">
                                    <div class="card-body">
                                        <div class="row">
                                            <!-- Type Filters -->
                                            <div class="col-md-4">
                                                <h6>Type</h6>
                                                <div id="typeFilters" class="filter-group">
                                                    <!-- Dynamic type filters will be loaded here -->
                                                </div>
                                            </div>
                                            <!-- Author Filters -->
                                            <div class="col-md-4">
                                                <h6>Author</h6>
                                                <div id="authorFilters" class="filter-group">
                                                    <!-- Dynamic author filters will be loaded here -->
                                                </div>
                                            </div>
                                            <!-- Section Filters -->
                                            <div class="col-md-4">
                                                <h6>Section</h6>
                                                <div id="sectionFilters" class="filter-group">
                                                    @foreach (var sectionItem in Model)
                                                    {
                                                        <div class="form-check">
                                                            <input class="form-check-input filter-checkbox" type="checkbox" value="@sectionItem.Id" id="section_@sectionItem.Id" data-filter-type="section">
                                                            <label class="form-check-label" for="section_@sectionItem.Id">
                                                                @sectionItem.Name
                                                            </label>
                                                        </div>
                                                    }
                                                </div>
                                            </div>
                                        </div>
                                        <div class="row mt-3">
                                            <div class="col-12">
                                                <button type="button" id="clearFilters" class="btn btn-outline-secondary btn-sm">Clear All Filters</button>
                                                <div id="activeFilters" class="mt-2"></div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<!-- Search Results -->
<div class="row mt-4">
    <div class="col-12">
        <div id="searchResults" class="d-none">
            <div class="card">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h5 class="mb-0">Search Results</h5>
                    <span id="resultsCount" class="badge bg-primary"></span>
                </div>
                <div class="card-body">
                    <div id="resultsContainer"></div>
                    <nav id="paginationContainer" class="mt-3"></nav>
                </div>
            </div>
        </div>
        <div id="noResults" class="alert alert-info d-none">
            <i class="bi bi-info-circle"></i> No results found for your search criteria.
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/js/search.js"></script>
    <script src="~/js/autocomplete.js"></script>
    <script src="~/js/filters.js"></script>
}